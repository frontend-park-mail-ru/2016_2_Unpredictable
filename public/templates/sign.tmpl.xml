<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">

    <div class="sign row">
        <h1 class="sign__header">TechnoOsmos</h1>
        <div class="sign__body">

            <div class="sign__signin signin  col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-2">
                <h3 class="signin__header">Log in</h3>
                <input type="text" name="login" placeholder="Login" class="signin__login-input input"/>
                <!--<div class="signin__login_error"></div>-->
                <input type="password" name="password" placeholder="Password" class="signin__password-input input"/>
                <!--<div class="signin__password_error"></div>-->
                <!--<div class="signin__invalid_data"></div>-->
                <p class="signin__error"></p>
                <a class="signin__submit button col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">Log in!</a>
            </div>


            <div class="sign__signup signup  col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-0">
                <h3 class="signup__header">Sign up</h3>
                <input type="text" name="login" placeholder="Login" class="signup__login-input input"/>
                <!--<div class="signup__login_error"></div>-->
                <!--<input type="text" name="name" placeholder="Name" class="signup__name-input input"/>-->
                <!--<input type="text" name="email" placeholder="Email" class="signup__email-input input"/>-->
                <input type="password" name="password1" placeholder="Password" class="signup__password-input input"/>
                <!--<div class="signup__password_error"></div>-->
                <input type="password" name="password2" placeholder="Repeat password" class="signup__password-repeat input"/>
                <!--<div class="signup__password_repeat_error"></div>-->
                <!--<div class="signup__invalid_data"></div>-->
                <p class="signup__error"></p>
                <a class="signup__submit button col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">Sign up!</a>
            </div>

            <!--<div class="clearfix"></div>-->

        </div>

        <div class="sign__back-link col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">
            <a href="back">BACK</a>
        </div>
    </div>

</fest:template>